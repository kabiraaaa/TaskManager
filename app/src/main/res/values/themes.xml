<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion.Elevated">
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/home_chip_background_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.subHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#848A94</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.imageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:tint">@android:color/black</item>
    </style>


    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <color name="black_white">#000000</color>
    <color name="white_black">#FFFFFF</color>

</resources>